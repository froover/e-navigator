<div class="container">
  <h2>ユーザー登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <form class="container">
      <div class="form-group">
        <%= f.label 'メールアドレス' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => 50 %>
      </div>

      <div class="form-group">
        <%= f.label 'パスワード' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", :size => 50 %>
      </div>

      <div class="form-group">
        <%= f.label 'パスワード（確認用）' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :size => 50 %>
      </div>

      <div class="form-group">
        <%= f.label '名前' %><br />
        <%= f.text_field :name, autofocus: true, :size => 50 %>
      </div>

      <div class="form-group">
        <%= f.label '生年月日' %><br />
        <%= f.date_select :birthday, {:use_month_numbers => true, :start_year => 1985, :end_year => 2000} %>
      </div>

      <div class="form-group">
        <%= f.label '性別' %><br />
        <%= f.select :gender, User.genders_i18n.keys.map {|k| [User.genders_i18n[k], k]} %>
      </div>

      <div class="form-group">
        <%= f.label '学校名' %><br />
        <%= f.text_field :school, autofocus: true, :size => 50 %>
      </div>

      <div>
        <button type="submit" class="btn btn-outline-primary">登録</button>
      </div>
    </form>
  <% end %>
    <br />
  <%= render "devise/shared/links" %>
</div>
